<p>
  <b>Name:</b> <%=h @drink.name %><br/>
  <% if @drink.created_by != nil and @drink.created_by != "" -%>
	<small>Created by <%=h @drink.created_by %></small>
  <% end -%>
</p>

<% if @user != nil -%>
<p>
	<% form_tag :controller => :users, :id => @user.id, :action => :checkin do |f| -%>
	<%= hidden_field_tag :drink_id, @drink.id %>
	<%= submit_tag 'Checkin' %> 
	<% end -%>
	- 
	<% form_tag :controller => :users, :id => @user.id, :action => :wishfor do |f| -%>
	<%= hidden_field_tag :drink_id, @drink.id %>
	<%= submit_tag 'Add To Wish List' %> 
	<% end -%>
</p>
<% end -%>

<p>
  <b>Recipe:</b>
  <pre><%=h @drink.recipe %></pre>
</p>

<% if @drink.urls != nil and @drink.urls != "" -%>
<p>
  <b>URLs:</b>
</p>

<ul>
  <% @drink.urls_array.each { |url| -%>
	<li><%= link_to h(url), h(url) %></li>
  <% } -%>
</ul>
<% end -%>
