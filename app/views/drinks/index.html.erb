<h1>Listing drinks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Recipe</th>
    <th>Created by</th>
    <th>Urls</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @drinks.each do |drink| %>
  <tr>
    <td><%= drink.name %></td>
    <td><%= drink.recipe %></td>
    <td><%= drink.created_by %></td>
    <td><%= drink.urls %></td>
    <td><%= link_to 'Show', drink %></td>
    <td><%= link_to 'Edit', edit_drink_path(drink) %></td>
    <td><%= link_to 'Destroy', drink, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

